<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <DatePicker
        android:id="@+id/dialog_date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:calendarViewShown="false"/>

    <Button
        android:id="@+id/dialog_date_positive_button"
        style="?attr/buttonBarPositiveButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/dialog_date_picker"
        android:layout_alignRight="@id/dialog_date_picker"
        android:layout_below="@+id/dialog_date_picker"
        android:text="@string/ok"/>
</RelativeLayout>
